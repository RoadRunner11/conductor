[program:lcp]
command=/usr/bin/uwsgi
    --plugin python
    --socket /tmp/lcp-uwsgi.sock
    --module lcp.wsgi:application
    --enable-threads
    --single-interpreter
    --master
    --pythonpath {{ app_path }}
    --processes 4
    --virtualenv {{ venv_path }}
directory={{ app_path }}
user=www-data
autostart=true
autorestart=true
stdout_logfile=/var/log/lcp.log
redirect_stderr=true
stopsignal=QUIT
environment=
{% for env_var, env_value in django_env|dictsort %}
    {{ env_var }} = {{ env_value }},
{% endfor %}
