<div class="ui middle aligned stackable grid">
  <div class="eight wide centered column">
    <h2 class="ui red image header">Contact Us</h2>
    <form {{action 'submit' on='submit'}} class="ui large form{{if (and didValidate (v-get model 'isInvalid')) " error"}}">
      <div class="ui stacked segment">
        <div class="field{{if (and didValidate (v-get model 'email' 'isInvalid')) " error"}}">
          <label>E-mail</label>
          <div class="ui left input">
            {{input type="email" id="email" placeholder="Your email address" value=model.email}}
          </div>
        </div>
        {{#if (and didValidate (v-get model 'email' 'isInvalid'))}}
          <div class="ui error message">{{v-get model 'email' 'message'}}</div>
        {{/if}}

        <div class="field{{if (and didValidate (v-get model 'subject' 'isInvalid')) " error"}}">
          <label>Subject</label>
          {{input type="text" id="subject" placeholder="What's on your mind?" value=model.subject}}
        </div>
        {{#if (and didValidate (v-get model 'subject' 'isInvalid'))}}
          <div class="ui error message">{{v-get model 'subject' 'message'}}</div>
        {{/if}}

        <div class="field{{if (and didValidate (v-get model 'message' 'isInvalid')) " error"}}">
          <label>Message</label>
          {{textarea rows="10" id="message" placeholder="Please provide some details." value=model.message}}
        </div>
        {{#if (and didValidate (v-get model 'message' 'isInvalid'))}}
          <div class="ui error message">{{v-get model 'message' 'message'}}</div>
        {{/if}}

        <button type="submit" class="ui fluid large {{if successful "green" "red"}} submit button" disabled="{{if successful "disabled"}}">{{if successful "Sent" "Send request"}}</button>
      </div>
    </form>
  </div>
</div>
