<div class="ui left {{if icon "icon"}} input">
  {{#if icon}}
    <i class="{{icon}} icon"></i>
  {{/if}}
  {{input
    id=inputId
    placeholder=placeholder
    value=inputValue
    type=inputType
    focus-out=(action (mut hadFocus) true)}}
</div>
{{#if showError}}
  <div class="ui left error message">
    <p>{{errorMessage}}</p>
  </div>
{{/if}}
