<h2>Find a school for {{model.firstName}} {{model.lastName}}</h2>

<div class="eight wide field">
  <div class="ui search">
    <div class="ui icon input">
      {{input value=search class="prompt" placeholder="Search schools..."}}
      <i class="search icon"></i>
    </div>
  </div>
</div>

{{#if model}}
  <div class="ui cards">
    {{#each model as |school|}}
      {{#link-to 'dashboard' class="red card"}}
        <div class="content">
          <div class="description">{{school.name}}</div>
        </div>
      {{/link-to}}
    {{/each}}
  </div>
{{else}}
  <div class="ui two column padded centered grid">
    <div class="row">
      <div class="center aligned column">
        <i class="massive grey university icon"></i>
      </div>
    </div>
    <div class="row">
      <div class="center aligned column">
        Begin
        by typing the school name
        in the search bar.
      </div>
    </div>
  </div>
{{/if}}
