<div class="ui search">
  <div class="ui icon input">
    {{debounced-input val=search class="prompt" placeholder="Search schools..."}}
    <i class="search icon"></i>
  </div>
</div>

{{#if currentlyLoading}}
  <div class="ui huge active loader"></div>
{{else}}
  {{#if model}}
    <h3>Select a school</h3>
    <div class="ui cards">
      {{#each schoolOptions as |schoolOption|}}
        {{#if schoolOption.isTargetSchool }}
          <div class="red card">
            <div class="content">
              <div class="description">{{schoolOption.school.name}}</div>
            </div>
            <div class="extra content">
              <i class="star icon"></i>
              On studentâ€™s list
            </div>
          </div>
        {{else}}
          <a {{action "createTargetSchool" schoolOption.school}} class="red card">
            <div class="content">
              <div class="description">{{schoolOption.school.name}}</div>
            </div>
          </a>
        {{/if}}
      {{/each}}
    </div>
  {{else}}
    <div class="ui two column padded centered grid">
      <div class="row">
        <div class="center aligned column">
          <i class="massive grey university icon"></i>
        </div>
      </div>
      <div class="row">
        <div class="center aligned column">
          Begin
          by typing the school name
          in the search bar.
        </div>
      </div>
    </div>
  {{/if}}
{{/if}}
