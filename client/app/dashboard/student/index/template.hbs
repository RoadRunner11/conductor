<div class="ui stackable grid">
  <div class="{{if schools 'fifteen' 'ten'}} wide column">
    <p>Applying for <strong>{{humanize-semester model.matriculationSemester}}</strong></p>
    {{#if schools}}
      <table class="ui selectable orange table">
        <thead>
          <tr>
            <th>Schools</th>
          </tr>
        </thead>
        <tbody>
          {{#each schools as |school|}}
            <tr>
              <td>{{school.name}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div class="ui icon info message">
        <i class="university icon"></i>
        <div class="content">
          {{model.firstName}} has no schools yet.
          Search for the first one by clicking the <i>Find school</i> button below.
        </div>
      </div>
    {{/if}}
    {{#link-to 'dashboard.student.find-school' model class="ui large orange button"}}Find school{{/link-to}}
  </div>
</div>
