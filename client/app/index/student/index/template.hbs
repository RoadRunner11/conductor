<div class="ui stackable grid">
  <div class="{{if schools 'fourteen' 'ten'}} wide column">
    <div class="ui stackable grid">
      <div class="ten wide column">
        <p>Applying for <strong>{{humanize-semester model.matriculationSemester}}</strong></p>
      </div>
      <div class="six wide column">
        <a {{action "triggerExport" model}} class="ui right floated blue button">
          Export to Google Sheets
        </a>
      </div>
    </div>
    {{#if schools}}
      <table class="ui selectable orange table">
        <thead>
          <tr>
            <th class="seven wide">Schools</th>
            <th class="eight wide"></th>
            <th class="one wide"></th>
          </tr>
        </thead>
        <tbody>
          {{#each schools as |school|}}
            <tr>
              <td>{{school.name}}</td>
              <td class="right aligned">
                {{#each school.milestones as |milestone|}}
                  {{milestone-label milestone=milestone}}
                {{else}}
                  <span data-tooltip="We are reviewing dates for this school currently." data-inverted="">
                    <i class="blue info icon"></i>
                  </span>
                {{/each}}
              </td>
              <td>
                <div class="ui simple dropdown">
                  <i class="blue content icon"></i>
                  <div class="menu">
                    <a {{action "deleteTargetSchool" school}} class="item">
                      <i class="red trash outline icon"></i>
                      Delete school
                    </a>
                  </div>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div class="ui icon info message">
        <i class="university icon"></i>
        <div class="content">
          {{model.firstName}} has no schools yet.
          Search for the first one by clicking the <i>Find school</i> button below.
        </div>
      </div>
    {{/if}}
    {{#link-to 'index.student.find-school' model class="ui large orange button"}}Find school{{/link-to}}
  </div>
</div>
